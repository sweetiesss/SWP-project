@model Lecturer
@{
    ViewBag.Title = "Update a Lecturer";
}

<h2>Update a Lecturer <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Id">Id:</label>
        <input class="form-control" asp-for="@Model.Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name">Name:</label>
        <input class="form-control" asp-for="@Model.Name" required />
    </div>
    @if (ViewData["NameLength"] == "NameLength")
    {
        <div style="color:red">Name can only contain at max 200 characters</div>
        <br />
    }
    <div class="form-group">
        <label asp-for="@Model.Main">Main:</label>
        <input class="form-control" asp-for="@Model.Main" required />
    </div>
    <br />
    @if (ViewData["MainLength"] == "MainLength")
    {
        <div style="color:red">Main must contain at max 200 characters</div>
        <br />
    }
    <label asp-for="@Model.Leader">Is Leader? </label>
    <select class ="form-group" asp-for="@Model.Leader" id="Leader">
        <option value=true>Yes</option>
        <option value=false>No</option>
    </select>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>
