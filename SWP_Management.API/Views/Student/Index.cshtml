@model IEnumerable<Student>

@{
    ViewData["Title"] = "All Students";

}

<h2>All Students</h2>
<a asp-action="AddStudent" class="btn btn-sm btn-primary">Add Student</a>
<br />

<form asp-controller="Student" asp-action="Index" method="">
    <div>
        Search by Name: <input type="text" name="Name" required />
        <input class="btn btn-sm btn-primary" type="submit" value="Filter" />
    </div>
</form>
<form asp-controller="Student" asp-action="Index" method="">
    <input class="btn btn-sm btn-primary" type="submit" value="Show All" />
</form>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Main</th>
            <th>Leader</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var r in Model)
            {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.Name</td>
                            <td>@r.Main</td>
                            <td>@r.Leader</td>
                            <td>
                                <form asp-action="UpdateStudent" method="">
                                    <input type="hidden" value="@r.Id" name="id" />
                                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                </form>
                            </td>
                            <td>
                                <form asp-action="DeleteStudent" method="post">
                                    <input type="hidden" value="@r.Id" name="id" />
                                    <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                                </form>
                            </td>
                        </tr>
            }
        }
    </tbody>
</table>