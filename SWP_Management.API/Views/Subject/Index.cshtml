@model IEnumerable<Subject>
@{
    ViewData["Title"] = "All Subject";
}

<h2>All Subject</h2>
<a asp-action="AddSubject" class="btn btn-sm btn-primary">Add Subject</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>
                        <form asp-action="UpdateSubject" method="">
                            <input type="hidden" value="@r.Id" name="id" />
                            <input type="hidden" value="@r.Name" name="name" />
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteSubject" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                            <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>