@model IEnumerable<Team>
@{
    ViewData["Title"] = "All Team";
}

<h2>All Team</h2>
<a asp-action="AddTeam" class="btn btn-sm btn-primary">Add Team</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Course Id</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.CourseId</td>
                    <td>
                        <form asp-action="UpdateTeam" method="">
                            <input type="hidden" value="@r.Id" name="id" />
                            <input type="hidden" value="@r.CourseId" name="CourseId" />
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteTeam" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                            <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>