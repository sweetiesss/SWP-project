@model IEnumerable<StudentTeam>
@{
    ViewData["Title"] = "All Student Team";
}

<h2>All Student - Team</h2>
<a asp-action="AddStudentTeam" class="btn btn-sm btn-primary">Add Student Team</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Team ID</th>
            <th>Student ID</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.TeamId</td>
                    <td>@r.StudentId</td>
                    <td>
                        <form asp-action="UpdateStudentTeam" method="">
                            <input type="hidden" value="@r.Id" name="id" />
                            <input type="hidden" value="@r.TeamId" name="TeamId" />
                            <input type="hidden" value="@r.StudentId" name="StudentId" />
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteStudentTeam" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                            <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>