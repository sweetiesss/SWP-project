@model Report
@{
    ViewBag.Title = "Add a Report";
    List<Team> TeamList = (List<Team>)ViewData["TeamList"];
}

<h2>Add a Student <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddReport" method="post">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input class="form-control" name="Id" required />
    </div>
    <div class="form-group">
        <label for="Descripton">Descripton:</label>
        <input class="form-control" name="Descripton" required />
    </div>
    <br />
    <select class="form-select form-select-lg" name="TeamId" id="TeamId" required>
        <option value = "" selected>Team Id</option>
        @{
            foreach (Team r in TeamList)
            {
                <option value="@r.Id"> @r.Id</option>
            }
        }
        }
    </select>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (ViewBag.Result == "Duplicate")
{
    <h3>THIS ID ALREADY EXIST</h3>
}
