@model Report
@{
    ViewBag.Title = "Add a Report";
    List<Team> TeamList = (List<Team>)ViewData["TeamList"];
}

<h2>Add a Report <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddReport" method="post">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input class="form-control" name="Id" required />
    </div>
    @if (ViewData["Invalid"] == "Invalid")
    {
        <div style="color:red">ID must start with "RP" and followed by any number</div>
        <br />
    }

    @if (ViewData["IdLength"] == "IdLength")
    {
        <div style="color:red">Name can only contain at max 50 characters</div>
        <br />
    }

    <div class="form-group">
        <label for="Descripton">Descripton:</label>
        <input class="form-control" name="Descripton" required />
    </div>
    <br />
    @if (ViewData["DescriptionLength"] == "DescriptionLength")
    {
        <div style="color:red">Description can only contain at max 200 characters</div>
        <br />
    }
    <select class="form-select form-select-lg" name="TeamId" id="TeamId" required>
        <option value = "" selected>Team Id</option>
        @{
            foreach (Team r in TeamList)
            {
                <option value="@r.Id"> @r.Id</option>
            }
        }
        }
    </select>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>


@if (ViewBag.Result == "Duplicate")
{
    <h3 class="text-center" style="color:red">THIS ID ALREADY EXIST</h3>
    <br />
}