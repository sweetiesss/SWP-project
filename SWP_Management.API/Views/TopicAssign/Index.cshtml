@model IEnumerable<TopicAssign>

@{
    ViewData["Title"] = "All Topic Assign";

}

<h2>All Topic Assign</h2>
<a asp-action="AddTopicAssign" class="btn btn-sm btn-primary">Add Topic - Assign</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Semester ID</th>
            <th>Subject ID</th>
            <th>Topic ID</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.SemesterId</td>
                    <td>@r.SubjectId</td>
                    <td>@r.TopicId</td>
                    <td>
                        <form asp-action="UpdateTopicAssign" method="">
                            <input type="hidden" value="@r.Id" name="id" />
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteTopicAssign" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                            <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>