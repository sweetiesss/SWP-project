@model Assignment
@{
    ViewBag.Title = "Add an Assignment";
}

<h2>Add an Assignment <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddAssignment" method="post">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input class="form-control" name="Id" required />
    </div>

    @if (ViewData["Id"] == "Invalid")
    {
        <div style="color:red">ID must start with "Task" and followed by any number</div>
        <br />
    }


    @if (ViewData["IdLength"] == "IdLength")
    {
        <div style="color:red">Id can only contain at max 50 characters</div>
        <br />
    }
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" required />
    </div>

    @if (ViewData["NameLength"] == "NameLength")
    {
        <div style="color:red">Name can only contain at max 200 characters</div>
        <br />
    }
    <div class="form-group">
        <label for="Description">Description:</label>
        <input class="form-control" name="Description" required />
    </div>

    @if (ViewData["DescriptionLength"] == "DescriptionLength")
    {
        <div style="color:red">Description can only contain at max 200 characters</div>
        <br />
    }
    <div class="form-group">
        <label for="DateStart">DateStart:</label>
        <input class="form-control-sm" type="date" name="DateStart" required />
    </div>
    <div class="form-group">
        <label for="DateEnd">DateEnd: </label>
        <input class="form-control-sm" type="date" name="DateEnd" required />
    </div>

    @if (ViewData["DateTime"] == "DateTime")
    {
        <div style="color:red">Date Start must occurs before Date Ends</div>
        <br />
    }
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (ViewBag.Result == "Duplicate")
{
    <br />
    <h3 style="color:red" class="text-center">This Id already exists</h3>
}