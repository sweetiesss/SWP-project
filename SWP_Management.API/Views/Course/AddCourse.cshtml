@model Course
@{
    ViewBag.Title = "Add a Course";
    List<Semester> semesterList = (List<Semester>)ViewData["SemesterList"];
    List<Subject> subjectList = (List<Subject>)ViewData["SubjectList"];
    List<Lecturer> lecturerList = (List<Lecturer>)ViewData["LecturerList"];
}

<h2>Add a Course <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddCourse" method="post">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input class="form-control" name="Id" required />
    </div>

    @if (ViewData["IdLength"] == "IdLength")
    {
        <div style="color:red">Id can only contain at max 50 characters</div>
        <br />
    }


    @if (ViewData["Invalid"] == "Invalid")
    {
        <div style="color:red">ID must start with "C" and followed by any number</div>
        <br />
    }


    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" required />
    </div>

    @if (ViewData["NameLength"] == "NameLength")
    {
        <div style="color:red">Name can only contain at max 200 characters</div>
        <br />
    }

    <div class="form-group">
        <label for="DateStart">DateStart:</label>
        <input class="form-control" name="dateStart" type="date" required />
    </div>
    <div class="form-group">
        <label for="DateEnd">DateEnd:</label>
        <input class="form-control" name="dateEnd" type="date" required />
    </div>

    @if (ViewData["DateTime"] == "DateTime")
    {
        <div style="color:red">Date Start must occurs before Date Ends</div>
        <br />
    }
    <br />
    <select class="form-select form-select-lg" name="SemesterId" id="SemesterId" required>
        <option selected value="">Semester Id</option>
        @{
            foreach (Semester r in semesterList)
            {
                <option value="@r.Id"> @r.Id</option>
            }
        }
        }
    </select>
    <br />
    <select class="form-select form-select-lg" name="SubjectId" id="SubjectId" required>
        <option selected value="">Subject Id</option>
        @{
            foreach (Subject r in subjectList)
            {
                <option value="@r.Id"> @r.Id</option>
            }
        }
        }
    </select>
    <br />
    <select class="form-select form-select-lg" name="LecturerId" id="LecturerId" required>
        <option selected value="">Lecturer Id</option>
        @{
            foreach (Lecturer r in lecturerList)
            {
                <option value="@r.Id"> @r.Id</option>
            }
        }
        }
    </select>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>



@if (ViewBag.Result == "Duplicate Course")
{
    <div style="color:red">This Course already exist</div>
    <br />
}