                            </form>
                        <form asp-action="DeleteReport" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                                <button style="background-color:#212529;color:white; border-radius:12px;" type="submit" class="btn btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
