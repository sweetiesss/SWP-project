@model Report;

@{
    List<Report> ReportList = (List<Report>)ViewData["ReportList"];
    String cookieValue = ViewData["cookieValue"].ToString();
}
<h3>Assignment management:</h3>
<form asp-controller="Report" asp-action="AddReport" method="">
    <input type="hidden" name="id" value="@cookieValue" />
    <button class="btn btn-sm bg-white" type="submit"
            style="background-color:#212529!important; color:white!important; border-radius:12px;">
        Make a report
    </button>
</form>
