@{

    List<Report> reportList = (List<Report>)ViewData["ReportList"];
    Layout = "_LectureLayout";
}

@if (reportList.Count != 0)
{


    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Descripton</th>
                <th scope="col">Team Id</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var r in reportList)
            {
                <tr>
                    <td>@r.Id</td>
                    <td style="word-break:break-all; word-wrap:break-word; white-space:pre-wrap;">@r.Description</td>
                    <td>@r.TeamId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 style="text-align:center"> No report available</h2>
}

