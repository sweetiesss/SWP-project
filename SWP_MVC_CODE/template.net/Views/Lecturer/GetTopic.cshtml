@using Azure;
@model IEnumerable<Topic>

@{
    ViewData["Title"] = "All Assignments";
    Layout = "_LectureLayout";
    List<Topic> TopicList = (List<Topic>)ViewData["TopicList"];

}

@if(ViewBag.Result == "Leader")
{
    <h3> All topics</h3>
}
else
{
    <h3> Topics </h3 >
}

<a asp-action="AddTopic" class="btn btn-sm " style="background-color:#28a745; border-radius:12px;font-weight:600;color:black;box-shadow: 0px 0px 0px 3px green;">Add Topic</a>
<a asp-action="AssignTopic" class="btn btn-sm " style="background-color:#28a745; border-radius:12px;font-weight:600;color:black;box-shadow: 0px 0px 0px 3px green;">Assign Topic</a>
<br />
<br/>
@if (TopicList.Count != 0)
{
   <div class="table_scroll">
            <table class="table table-hover table_header_fixed" >
        <thead class="thead">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Descripton</th>
                <th>LecturerId</th>
                <th>Approval</th>
                <th style="text-align:center!important">Edit</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var r in TopicList)
            {
                <tr>
                    <td>@r.Id</td>
                    <td style ="word-break:break-all; word-wrap:break-word; white-space:pre-wrap;">@r.Name</td>
                    <td style="word-break:break-all; word-wrap:break-word; white-space:pre-wrap;">@r.Description</td>
                    <td>@r.LecturerId</td>
                    <td>@r.Approval</td>
                    <td> <div class="d-flex justify-content-around">
                        <form asp-action="UpdateTopic" method="">
                            <input type="hidden" value="@r.Id" name="id" />
                                    <button style="background-color:#28a745; border-radius:12px;font-weight:600;color:black;box-shadow: 0px 0px 0px 3px green;" type="submit" class="btn btn-sm">Update</button>
                        </form>
                        <form asp-action="DeleteTopic" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                                    <button style="background-color:#28a745; border-radius:12px;font-weight:600;color:black;box-shadow: 0px 0px 0px 3px green;" type="submit" class="btn btn-sm">Delete</button>
                        </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

        @if(ViewBag.Result == "Duplicate")
        {
            <h3 style="color:red">ID already exist</h3>
        }
    }


else
{
    <h2 style="text-align:center"> No topic available</h2>
}
