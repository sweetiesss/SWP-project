                        </form>
                        </div>
                        </div>*@
                                    }
                                }
                            </div>
                        </div>
                    }

                    @* <div style="display:grid; grid-template-columns: auto auto auto;place-content:center; grid-column-gap:30px;">
                @foreach (var x in CourseList)
                {
                @if (x.SemesterId.Equals(Ongoing[i].Id))
                {
                list.Add(x);
                <div class="card" style="width:18rem;min-height:200px;">
                <div class="card-header" style="background:#c3abef; color:white;"><h5> @x.Subject.Id</h5></div>
                <div class="card-body">
                <p class="card-text">@x.Name</p>
                <h6 class="card-subtitle ">Subject: @x.Subject.Name</h6>
