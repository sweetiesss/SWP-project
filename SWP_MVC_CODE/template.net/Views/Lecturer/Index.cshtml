                </form>
                </div>
                </div>


                }
                }
                </div>*@
                    @if (list.Count == 0)
                    {
                        <div style="margin:20px; margin-top:0px;">No course available</div>
                    }
                    else
                    {
                        list.Clear();
                    }
                </div>
            }
        </div>
        <div class="panel" id="two-panel">
            @for (int i = Future.Count - 1; i >= 0; i--)
            {
                <div style="width:fit-content;margin-top:16px;margin-bottom:16px;border-radius:8px;border:solid 1px black;min-width:90vw;">
                    <h3 style="margin:20px;">
                        @Future[i].Name
                    </h3>
                    <div style="display:grid; grid-template-columns: auto auto auto;place-content:center; grid-column-gap:30px;">
                        @foreach (var x in CourseList)
                        {

                            @if (x.SemesterId.Equals(Future[i].Id))
                            {
                                list.Add(x);
                                <div class="card" style="width:18rem;min-height:200px; ">
                                    <div class="card-header" style="background:#c3abef; color:white;"><h5> @x.Subject.Id</h5></div>
                                    <div class="card-body">
                                        <p class="card-text">   @x.Name</p>
                                        <h6 class="card-subtitle ">Subject: @x.Subject.Name</h6>
                                    </div>
                                    <div class="card-footer" style="background:white;">
                                        <form asp-controller="Lecturer" asp-action="HomePage" method="">
                                            <input type="hidden" value="@x.Id" name="CourseId" />
                                            <button style="width:100%; border-radius:8px;background:#c3abef;color:white;border:none;font-weight:600;">Enter</button>
                                        </form>
                                    </div>
                                </div>


                            }
                        }
                    </div>
                    @if (list.Count == 0)
                    {
                        <div style="margin:20px; margin-top:0px;">No course available</div>
                    }
                    else
                    {
                        list.Clear();
                    }
                </div>
            }

        </div>

        <div class="panel" id="three-panel">
            @for (int i = Past.Count - 1; i >= 0; i--)
