@{
    Lecturer lecturer = (Lecturer)ViewData["Lecturer"];
    Layout = "_LectureLayout";
}


<h3>
    Your info
</h3>
<div class="d-flex">
    <div class="identity_card_left">
        <img src="../../dist/img/user2-160x160.jpg" alt="User Image" style="width:40px">
    </div>
    <div class="identity_card_right">
    <div>
        <h5>Id : @lecturer.Id</h5>
    </div>
    <div><h5>Name : @lecturer.Name </h5></div>
    <div><h5>Main : @lecturer.Main </h5></div>
    <div><h5>Leader : @lecturer.Leader </h5></div>
    </div>
</div>