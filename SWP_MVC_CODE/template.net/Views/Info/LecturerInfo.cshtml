@{
    Lecturer lecturer = (Lecturer)ViewData["Lecturer"];
    Layout = "_LectureLayout";
}

<h3>
    Your info
</h3>
<div class="d-flex">
    <div class="identity_card_left" style="margin-right:30px;">
        <img src="../../dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" style="width:120px">
    </div>
    <div class="identity_card_right d-flex flex-column">
        <div>
            <h5>Id : @lecturer.Id</h5>
        </div>
        <div><h5>Name : @lecturer.Name </h5></div>
        <div><h5>Main : @lecturer.Main </h5></div>
        <div><h5>Leader : @lecturer.Leader </h5></div>
    </div>
</div>