@{
    ViewData["Title"] = "Home Page";
    Layout = "_HeaderOnly";

}
@{
    ViewData["Title"] = "Home Page";
    List<Semester> SemesterList = (List<Semester>)ViewData["SemesterList"];
    List<Semester> Ongoing = (List<Semester>)ViewData["Ongoing"];
    List<Semester> Future = (List<Semester>)ViewData["Future"];
    List<Semester> Past = (List<Semester>)ViewData["Past"];
    List<StudentCourse> CourseList = (List<StudentCourse>)ViewData["CourseList"];
    List<StudentCourse> list = new List<StudentCourse>();
    }
<div class="warpper">
    <input class="radio" id="one" name="group" type="radio" checked>
    <input class="radio" id="two" name="group" type="radio">
    <input class="radio" id="three" name="group" type="radio">
    <div class="tabs">
            <label class="tab" id="one-tab" for="one"><i class="fa-solid fa-hourglass-half"></i> ON GOING</label>
            <label class="tab" id="two-tab" for="two"><i class="fa-solid fa-hourglass-start"></i> FUTURE</label>
            <label class="tab" id="three-tab" for="three"><i class="fa-solid fa-hourglass-end"></i> PAST</label>
    </div>
    <div class="panels scroll">
        <div class="panel" id="two-panel">
            @for(int i=Future.Count -1 ; i>= 0; i--) 
                {
                <div style="width:fit-content;margin-top:16px;margin-bottom:16px;border-radius:8px;border:solid 1px black;min-width:90vw;">
                    <h4 style="margin:20px;">
                        @Future[i].Name
                    </h4>
      
                    <div style="display:grid; grid-template-columns: auto auto auto;place-content:center; grid-column-gap:30px;">
                        @foreach (var x in CourseList)
                        {
                            @if (x.Course.SemesterId.Equals(Future[i].Id))
                            {
                                list.Add(x);
                                <div class="card" style="width:18rem;min-height:200px;background:rgba(255,255,255,0.5); ">
                                    <div class="card-header" style="background:#c3abef; color:white;"><h5>@x.Course.SubjectId</h5></div>
                                    <div class="card-body">
                                        <h6 class="card-subtitle text-muted">@x.Course.Name</h6>
                                        <p class="text-muted" style="font-weight:600;">
                                            Subject: <span style="font-weight:600; color:black!important;">@x.Course.Subject.Name</span>

                                        </p>
                                    </div>
                                    <div class="card-footer" style="background:white;">
                                        <form asp-action="HomePage" method="">
                                            <input type="hidden" value="@x.CourseId" name="CourseId" />
                                                 <button style="width:100%; border-radius:8px;background:#c3abef;color:white;border:none;font-weight:600;">Enter</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    @if (list.Count == 0)
                    {
                        <div style="margin:20px; margin-top:0px;">No course available</div>
                    }
                    else
                    {
                        list.Clear();
                    }
                </div>
            }
            
        </div>
        <div class="panel" id="one-panel">
