@model IEnumerable<Student>

@{
    ViewData["Title"] = "All Students";
    //List<Assignment> AssignmentList = (List<Assignment>)ViewData["AssignList"];
}

<h2>All Assignments</h2>
<a asp-action="AddStudent" class="btn btn-sm btn-primary">Add Student</a>
@*<a asp-action="GetAssignment" class="btn btn-sm btn-secondary">Get Assignment</a>*@

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Main</th>
            <th>Leader</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@r.Main</td>
                    <td>@r.Leader</td>
                    <td>
                        <a asp-action="UpdateStudent" asp-route-id="@r.Id">
                            Update
                        </a>
                    </td>
                    <td>
                        <form asp-action="DeleteStudent" method="post">
                            <input type="hidden" value="@r.Id" name="id" />
                            <input type="image" src="/icon/close.png" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>